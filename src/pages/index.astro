---
import BaseLayout from "../layouts/BaseLayout.astro";

const installCmd = "curl -fsSL https://get.tyrum.ai/install.sh | bash";
const releasesUrl = "https://github.com/tyrumai/tyrum/releases/latest";
---

<BaseLayout
  title="Tyrum — An AI worker that uses your computer like a human would"
  description="Open source, self-hosted AI worker agent. Writes code, manages files, browses the web, and uses any app — with keyboard and mouse when it needs to."
>
  <!-- Nav -->
  <nav class="nav" data-open="false">
    <div class="nav-inner">
      <a href="/" class="nav-logo">tyrum</a>
      <button
        class="nav-toggle"
        type="button"
        aria-label="Toggle navigation"
        aria-controls="site-nav"
        aria-expanded="false"
      >
        <span></span>
        <span></span>
        <span></span>
      </button>
      <div class="nav-links" id="site-nav">
        <a href="#how-it-works">How It Works</a>
        <a href="#features">Features</a>
        <a href="#faq">FAQ</a>
        <a href="https://github.com/tyrumai/tyrum" target="_blank" rel="noopener">GitHub</a>
        <a href="https://docs.tyrum.ai" class="nav-cta">Try it now</a>
      </div>
    </div>
  </nav>

  <main class="shell">
    <!-- Hero -->
    <section class="hero">
      <p class="kicker">
        <span class="kicker-dot"></span>
        Open source &middot; Self-hosted &middot; Local-first
      </p>
      <h1 class="gradient-text">Your computer, on autopilot.</h1>
      <p class="lede">
        Tyrum is an AI that does real work on your machine. Writing code,
        browsing the web, managing files, running commands. Open source,
        free forever, and ready in 30 seconds.
      </p>
      <ul class="hero-points">
        <li>Works with any app on your computer</li>
        <li>Fast API calls. Human-like fallback.</li>
        <li>Full audit trail. You approve every risky action.</li>
      </ul>
      <div class="actions">
        <a href="https://docs.tyrum.ai" class="btn btn-primary">Read the docs</a>
        <a href="https://github.com/tyrumai/tyrum" target="_blank" rel="noopener" class="btn btn-secondary">View on GitHub</a>
      </div>
      <div class="install-box">
        <div class="install-header">
          <p class="install-label">Install</p>
          <div class="install-tabs" role="tablist">
            <button role="tab" class="install-tab" data-tab="script" aria-selected="true" type="button">Script</button>
            <button role="tab" class="install-tab" data-tab="windows" aria-selected="false" type="button">Windows</button>
            <button role="tab" class="install-tab" data-tab="linux" aria-selected="false" type="button">Linux</button>
            <button role="tab" class="install-tab" data-tab="macos" aria-selected="false" type="button">macOS</button>
          </div>
        </div>
        <div class="install-panel" role="tabpanel" data-panel="script">
          <div class="install-cmd">
            <code>{installCmd}</code>
            <button class="copy-btn" type="button" aria-label="Copy to clipboard" data-copy={installCmd}>
              <svg class="icon-copy" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="9" y="9" width="13" height="13" rx="2" ry="2"/><path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"/></svg>
              <svg class="icon-check" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 6 9 17l-5-5"/></svg>
            </button>
          </div>
          <span class="install-hint">Works on macOS and Linux · Requires Node.js 24+</span>
        </div>
        <div class="install-panel" role="tabpanel" data-panel="windows" hidden>
          <p class="install-desc">Download the latest <code class="inline-code">.exe</code> installer from GitHub Releases.</p>
          <a href={releasesUrl} target="_blank" rel="noopener" class="install-download">
            Download for Windows
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"/><polyline points="7 7 17 7 17 17"/></svg>
          </a>
        </div>
        <div class="install-panel" role="tabpanel" data-panel="linux" hidden>
          <p class="install-desc">Download the latest <code class="inline-code">.tar.gz</code> archive from GitHub Releases.</p>
          <a href={releasesUrl} target="_blank" rel="noopener" class="install-download">
            Download for Linux
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"/><polyline points="7 7 17 7 17 17"/></svg>
          </a>
        </div>
        <div class="install-panel" role="tabpanel" data-panel="macos" hidden>
          <p class="install-desc">Download the latest <code class="inline-code">.dmg</code> installer from GitHub Releases.</p>
          <a href={releasesUrl} target="_blank" rel="noopener" class="install-download">
            Download for macOS
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="7" y1="17" x2="17" y2="7"/><polyline points="7 7 17 7 17 17"/></svg>
          </a>
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="section" id="how-it-works">
      <p class="section-label">How It Works</p>
      <h2 class="section-title">Up and running in 30 seconds.</h2>
      <div class="steps">
        <div class="step">
          <div class="step-number">1</div>
          <h3>Install</h3>
          <p>One command. No signups, no config files, no cloud account needed.</p>
        </div>
        <div class="step">
          <div class="step-number">2</div>
          <h3>Connect a model</h3>
          <p>Point it at any OpenAI-compatible API — cloud or local. Bring your favorite model.</p>
        </div>
        <div class="step">
          <div class="step-number">3</div>
          <h3>Delegate and review</h3>
          <p>Hand off work, see exactly what it did, and approve anything risky before it runs.</p>
        </div>
      </div>
    </section>

    <!-- Features -->
    <section class="section" id="features">
      <p class="section-label">Features</p>
      <h2 class="section-title">Built for real work, not demos.</h2>
      <div class="features">
        <div class="feature">
          <div class="feature-icon">&#x1F5A5;</div>
          <h3>Does everything you can</h3>
          <p>Code, apps, browsers, files, terminals — if you can do it on a computer, Tyrum can too.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">&#x1F6E1;</div>
          <h3>Guardrails that learn</h3>
          <p>Asks before doing anything risky. Remembers your preferences so it gets smarter over time.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">&#x1F4CB;</div>
          <h3>Receipts for everything</h3>
          <p>Full execution traces for every action. See exactly what happened, why, and reproduce it anytime.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">&#x1F50C;</div>
          <h3>Any model, zero lock-in</h3>
          <p>Use hosted or local models through any OpenAI-compatible API. Switch providers whenever you want.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">&#x26A1;</div>
          <h3>APIs first, desktop when needed</h3>
          <p>Clean API calls for speed and reliability. Falls back to keyboard and mouse when there's no API — just like you would.</p>
        </div>
        <div class="feature">
          <div class="feature-icon">&#x1F513;</div>
          <h3>Open source, for real</h3>
          <p>Every line of code is public. No telemetry, no black boxes. Fork it, hack it, own it.</p>
        </div>
      </div>
    </section>

    <!-- Who It's For -->
    <section class="section" id="who">
      <p class="section-label">Who It's For</p>
      <h2 class="section-title">From solo devs to entire teams.</h2>
      <div class="personas">
        <div class="persona">
          <h3>Your personal AI worker</h3>
          <p>Hand off the tedious stuff. Tyrum handles repetitive tasks across any app while you focus on what matters.</p>
          <ul>
            <li>Works with any application on your machine</li>
            <li>Learns your preferences over time</li>
            <li>Asks before anything risky</li>
          </ul>
        </div>
        <div class="persona">
          <h3>Autonomous coworkers</h3>
          <p>AI team members with their own identity and permissions. They show up, do work, and report back — just like a human would.</p>
          <ul>
            <li>Each worker gets its own profile and permissions</li>
            <li>Works alongside your team naturally</li>
            <li>Audit trails for everything they do</li>
          </ul>
        </div>
        <div class="persona">
          <h3>Tinker and extend</h3>
          <p>Don't like something? Change it. Want a new capability? Build it. The code is yours to own.</p>
          <ul>
            <li>Fork-friendly architecture</li>
            <li>Pluggable model backends</li>
            <li>Community-driven roadmap</li>
          </ul>
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="cta">
      <h2 class="gradient-text">Ready to put your computer on autopilot?</h2>
      <p>Install Tyrum in seconds. Free and open source — no account, no credit card, no catch.</p>
      <div class="actions">
        <a href="https://docs.tyrum.ai" class="btn btn-primary">Get started free</a>
        <a href="https://github.com/tyrumai/tyrum" target="_blank" rel="noopener" class="btn btn-secondary">Star on GitHub</a>
      </div>
    </section>

    <!-- FAQ -->
    <section class="section" id="faq">
      <div class="faq-layout">
        <div class="faq-aside">
          <p class="section-label faq-label">FAQ</p>
          <h2 class="section-title faq-heading">Got questions?</h2>
          <p class="faq-support">
            Can't find what you're looking for?
            <a href="https://github.com/tyrumai/tyrum/discussions">Ask the community</a>.
          </p>
        </div>
        <div class="faq-list">
          <div class="faq-item">
            <button class="faq-q" type="button">
              What AI models work with Tyrum?
              <span class="faq-chevron">&#x25BE;</span>
            </button>
            <div class="faq-a">
              Anything that speaks the OpenAI-compatible API format — GPT-4o, Claude, Llama, Mistral, or any local model you run yourself. Bring your own key or endpoint.
            </div>
          </div>
          <div class="faq-item">
            <button class="faq-q" type="button">
              What can Tyrum actually do?
              <span class="faq-chevron">&#x25BE;</span>
            </button>
            <div class="faq-a">
              Anything you can do on a computer. Write code, use apps, browse the web, manage files, run commands. It uses APIs when they exist and falls back to keyboard and mouse when they don't — just like a human would.
            </div>
          </div>
          <div class="faq-item">
            <button class="faq-q" type="button">
              Does my data stay on my machine?
              <span class="faq-chevron">&#x25BE;</span>
            </button>
            <div class="faq-a">
              Yes. Data only goes to whatever AI model provider you configure. Run a local model and nothing leaves your machine. Period.
            </div>
          </div>
          <div class="faq-item">
            <button class="faq-q" type="button">
              How is this different from Copilot, Cursor, or Devin?
              <span class="faq-chevron">&#x25BE;</span>
            </button>
            <div class="faq-a">
              Those tools help you write code. Tyrum can do anything on your computer — not just coding. It's also self-hosted, open source, and model-agnostic. No subscription, no vendor lock-in.
            </div>
          </div>
          <div class="faq-item">
            <button class="faq-q" type="button">
              What systems does it run on?
              <span class="faq-chevron">&#x25BE;</span>
            </button>
            <div class="faq-a">
              Windows, macOS, and Linux. Use the install script on macOS/Linux (requires Node.js 24+), or download standalone binaries for any platform from <a href="https://github.com/tyrumai/tyrum/releases/latest">GitHub Releases</a>.
            </div>
          </div>
          <div class="faq-item">
            <button class="faq-q" type="button">
              Is it free?
              <span class="faq-chevron">&#x25BE;</span>
            </button>
            <div class="faq-a">
              Completely free and open source — forever. You only pay for AI model API calls, or nothing at all if you run a local model. No account required.
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer -->
  <footer class="footer">
    <div class="footer-inner">
      <div class="footer-brand">
        <div class="nav-logo">tyrum</div>
        <p>An AI worker that uses your computer like a human would. Open source, self-hosted, local-first.</p>
      </div>
      <div class="footer-col">
        <h4>Product</h4>
        <ul>
          <li><a href="#how-it-works">How It Works</a></li>
          <li><a href="#features">Features</a></li>
          <li><a href="#faq">FAQ</a></li>
        </ul>
      </div>
      <div class="footer-col">
        <h4>Resources</h4>
        <ul>
          <li><a href="https://docs.tyrum.ai">Documentation</a></li>
          <li><a href="https://github.com/tyrumai/tyrum" target="_blank" rel="noopener">GitHub</a></li>
          <li><a href={releasesUrl} target="_blank" rel="noopener">Downloads</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-copy">
      &copy; {new Date().getFullYear()} Tyrum. All rights reserved.
    </div>
  </footer>

  <script>
    // Nav toggle
    const nav = document.querySelector('.nav');
    const navToggle = document.querySelector('.nav-toggle');
    const navLinks = document.querySelector('.nav-links');

    const closeNav = () => {
      if (!nav || !navToggle) return;
      nav.setAttribute('data-open', 'false');
      navToggle.setAttribute('aria-expanded', 'false');
    };

    if (nav && navToggle && navLinks) {
      navToggle.addEventListener('click', () => {
        const isOpen = nav.getAttribute('data-open') === 'true';
        nav.setAttribute('data-open', isOpen ? 'false' : 'true');
        navToggle.setAttribute('aria-expanded', isOpen ? 'false' : 'true');
      });

      navLinks.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', closeNav);
      });

      window.addEventListener('resize', () => {
        if (window.innerWidth > 767) closeNav();
      });
    }

    // FAQ toggle
    document.querySelectorAll('.faq-q').forEach(button => {
      button.addEventListener('click', () => {
        const item = button.parentElement;
        if (!item) return;
        const isOpen = item.getAttribute('data-open') === 'true';
        item.setAttribute('data-open', isOpen ? 'false' : 'true');
      });
    });

    // Install tabs
    const tabs = document.querySelectorAll('.install-tab');
    const panels = document.querySelectorAll('.install-panel');

    tabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const target = tab.getAttribute('data-tab');
        tabs.forEach(t => t.setAttribute('aria-selected', 'false'));
        tab.setAttribute('aria-selected', 'true');
        panels.forEach(panel => {
          panel.hidden = panel.getAttribute('data-panel') !== target;
        });
      });
    });

    // Copy to clipboard
    document.querySelectorAll('.copy-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const text = btn.getAttribute('data-copy');
        if (!text) return;
        navigator.clipboard.writeText(text).then(() => {
          btn.setAttribute('data-copied', 'true');
          setTimeout(() => btn.removeAttribute('data-copied'), 2000);
        });
      });
    });
  </script>
</BaseLayout>
